<main class="product-details-page">
  <div class="container">
    <section class="product-main-info">
      <div class="product-image-area">
        <img
          src="/images/{{produto.imagem}}"
          alt="{{produto.nome}}"
          class="main-product-image"
        />
      </div>

      <div class="product-info-area">
        <h1 class="product-title">{{produto.nome}}</h1>
        <p class="product-id">ID: {{produto.id_produto}}</p>
        <div class="price-container">
          <span class="product-price">R$ {{produto.valor}}</span>
            <span class="stock-status {{#if produto.estoque}}in-stock{{else}}out-of-stock{{/if}}">
                {{#if produto.estoque}}
                    Em estoque ({{produto.estoque}} unidades)
                {{else}}
                    Esgotado
                {{/if}}
            </span>
        </div>
        <p class="short-description">
          {{produto.descricao_curta}}
        </p>
        <form class="add-to-cart-form" data-product-id="{{produto.id_produto}}">
          <div class="quantity-and-purchase">
            <div class="quantity-selector">
              <button
                class="quantity-btn btn-minus"
                type="button"
                data-id="{{produto.id_produto}}"
                {{disableIfNoStock produto.estoque}}
              >
                -
              </button>
              <input
                type="text"
                class="quantity-input"
                value="1"
                max="{{produto.estoque}}"
                readonly
                {{disableIfNoStock produto.estoque}}
              />
              <button
                class="quantity-btn btn-plus"
                type="button"
                data-id="{{produto.id_produto}}"
                {{disableIfNoStock produto.estoque}}
              >
                +
              </button>
            </div>
            {{#if produto.estoque}}
              <button type="submit" class="add-to-cart-btn">
                <span class="icon">üõí</span>
                Comprar
              </button>
            {{else}}
              <button type="button" class="add-to-cart-btn disabled" disabled>
                Produto Esgotado
              </button>
            {{/if}}
          </div>
        </form>
      </div>
    </section>
    <section class="product-description-details">
      <h2>Descri√ß√£o Completa</h2>
      <div class="description-content">
        {{!-- Aqui voc√™ pode usar {{produto.descricao_longa}} --}}
