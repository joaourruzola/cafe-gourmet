<main>

  <!-- FormulÃ¡rio de cadastro -->
  <div class="container">
    <div class="row">
      <div class="col-6 offset-3">
        <form action="/register" method="post" enctype="multipart/form-data">
          <input
            type="text"
            name="nome"
            class="form-control"
            placeholder="Nome do produto"
          />
          <input
            type="number"
            name="valor"
            class="form-control"
            placeholder="Valor do produto"
          />
          <input
            type="number"
            name="estoque"
            class="form-control"
            placeholder="Quantidade estoque"
          />
          <input type="file" name="imagem" class="form-control" />
          <input type="submit" class="btn btn-primary" value="Cadastrar" />
        </form>
      </div>
    </div>
  </div>

  <!-- Lista de produtos -->
  <div class="container">
    <div class="row">
      {{#each produtos}}
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
          <div class="card">
            <img src="/images/{{imagem}}" />
            <div class="textos">
              <p>
                {{nome}}<br />
                {{formatCurrency valor}}
              </p>
            </div>
            <a
              href="/alterar-produtos/{{id_produto}}"
              class="btn btn-warning"
            >Alterar</a>
            <a
              href="/remove/{{id_produto}}&{{imagem}}"
              class="btn btn-danger"
            >Remover</a>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</main>